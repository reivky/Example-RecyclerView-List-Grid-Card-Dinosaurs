<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="button_share"> style="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/share</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <style name="button_fav"> parent="style="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/share</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>
    <style name="text_name_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_16</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_8</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_16</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_8</item>
        <item name="android:layout_toEndOf">@id/img_item_photo</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_detail_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_16</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_16</item>
    </style>
    <style name="text_name_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>